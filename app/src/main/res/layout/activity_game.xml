<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="ru.stdrone.sea.GameActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:id="@+id/lay_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_mm_play_hs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_play_hs"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_mm_play_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_play_bt"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_mm_play_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_play_online"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_mm_quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_quit"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
